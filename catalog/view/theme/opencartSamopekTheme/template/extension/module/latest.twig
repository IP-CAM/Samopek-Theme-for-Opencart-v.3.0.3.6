<h3>{{ heading_title }}</h3>
<div class="row"> {% for product in products %}
  <div class="product-layout col-lg-5ths col-md-5ths col-sm-6 col-xs-12">
    <div class="product-thumb transition product-thumb-latest">
      <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
      <div class="button-group">
        {% if product.quantity <= 0 %}
          <button type="button" disabled="disabled" style="background: #FFC341;">{{ text_out_of_stock }}</button>
        {% else %}
          <button type="button" onclick="cart.add('{{ product.product_id }}');"><i class="fa fa-shopping-cart hidden-md hidden-lg"></i> <span class="hidden-xs hidden-sm">{{ button_cart }}</span></button>
        {% endif %}
        <button type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');" class="hidden-lg hidden-md"><i class="fa fa-heart"></i></button>
      </div>
      <div class="caption">
        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
        <!--<p>{{ product.description }}</p>-->
        Остаток {{product.quantity}}
        {% if product.rating %}
        <div class="rating">{% for i in 1..5 %}
          {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
          {% endfor %}</div>
        {% endif %}
      </div>
      <div class="quantity_price_row">
        <div class="quantity_ind">
          {% for i in 1..4 %}
            <svg width="12" height="12" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
              {% if product.quantity != 0 %}
                {%  if product.quantity / 10 >= (i-1) %}
                  <circle cx="4" cy="4" r="4" fill="#3AC2D7"/>
                {% else %}
                  <circle cx="4" cy="4" r="4" fill="#E7E7E7"/>
                {% endif %}
              {% else %}
                <circle cx="4" cy="4" r="4" fill="#E7E7E7"/>
              {% endif %}
            </svg>
          {% endfor %}
        </div>
      {% if product.price %}
        <div class="price"> {% if not product.special %}
            {{ product.price }}
          {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
          {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %}
        </div>
      {% endif %}
      </div>
    </div>
  </div>
  {% endfor %} </div>
