<section class="instaBlock">
  <div class="container container-lg">
    <div class="row">
      <div class="col-lg-3 col-sm-5">
        <p class="instaBlock_desc">{{ title }}</p>
        <h2 class="h2 instaBlock_tag"><a href="{{ link }}" target="_blank">{{ link_text }}</a></h2>
        <a href="{{ post_1 }}" class="instaBlock_image" target="_blank">
          <img src="{{ post_1_image }}" alt="">
        </a>
      </div>
      <div class="col-lg-9 col-sm-7 instaBlock_wrap">
        <div class="row">
          {% for i in 2..9 %}
            {% if _context['post_' ~ i ~ '_image'] and _context['post_' ~ i ~ '_image'] != '' %}
              <div class="col-md-3">
                <a href="{{ _context['post_' ~ i] }}" class="instaBlock_item" target="_blank">
                  <img src="{{ _context['post_' ~ i ~ '_image'] }}" alt="">
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="instaBlock_social">
          {% if insta_link and insta_link != '' %}
          <a href="{{ insta_link }}" class="instaBlock_social_item">
            <img src="catalog/view/theme/opencartSamopekTheme/img/insta.svg" alt="">
          </a>
          {% endif %}
          {% if vk_link and vk_link != '' %}
          <a href="{{ vk_link }}" class="instaBlock_social_item">
            <img src="catalog/view/theme/opencartSamopekTheme/img/vk.svg" alt="">
          </a>
          {% endif %}
          {% if description and description != '' %}
          <p>{{ description }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>