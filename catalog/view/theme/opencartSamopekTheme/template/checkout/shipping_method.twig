{% if error_warning %}
<div class="alert alert-warning alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
{% endif %}
{% if shipping_methods %}
<p>{{ text_shipping_method }}</p>
{% for shipping_method in shipping_methods %}
<p><strong>{{ shipping_method.title }}</strong></p>
{% if not shipping_method.error %}
{% for quote in shipping_method.quote %}
<div class="radio">
  <label> {% if quote.code == code or not code %}
    {% set code = quote.code %}
    <input type="radio" name="shipping_method" value="{{ quote.code }}" checked="checked" />
    {% else %}
    <input type="radio" name="shipping_method" value="{{ quote.code }}" />
    {% endif %}
    {{ quote.title }} - {{ quote.text }}</label>

    {% if quote.code == "flat.flat" %}
    <div class="container shipping-custom-fields">
      <div class="row">
        <div class="col-sm-6">
      <div class="form-group">
        <input type="text" name="firstname" value="" placeholder="{{ text_shipping_firstname }}" id="input-shipping-firstname" class="form-control" />
      </div>
      <div class="form-group">
        <input type="text" name="lastname" value="" placeholder="{{ text_shipping_lastname }}" id="input-shipping-lastname" class="form-control" />
      </div>
      <div class="form-group">
        <input type="text" name="telephone" value="" placeholder="{{ text_shipping_telephone }}" id="input-shipping-telephone" class="form-control" />
      </div>
      <div class="form-group">
        <input type="text" name="street" value="" placeholder="{{ text_shipping_street }}" id="input-shipping-street" class="form-control" />
      </div>
      <div class="row">
        <div class="col-sm-3 form-group">
          <input type="text" name="house" value="" placeholder="{{ text_shipping_house }}" id="input-shipping-house" class="form-control" />
        </div>
        <div class="col-sm-3 form-group">
          <input type="text" name="block" value="" placeholder="{{ text_shipping_block }}" id="input-shipping-block" class="form-control" />
        </div>
        <div class="col-sm-3 form-group">
          <input type="text" name="front-door" value="" placeholder="{{ text_shipping_front_door }}" id="input-shipping-front-door" class="form-control" />
        </div>
        <div class="col-sm-3 form-group">
          <input type="text" name="flat" value="" placeholder="{{ text_shipping_flat }}" id="input-shipping-flat" class="form-control" />
        </div>
      </div>
      <input type="text" name="comment" value="" placeholder="{{ text_shipping_comment }}" id="input-shipping-comment" class="form-control" />
      </div>
      </div>
    </div>
    </div>
    {% endif %}
</div>
{% endfor %}
{% else %}
<div class="alert alert-danger alert-dismissible">{{ shipping_method.error }}</div>
{% endif %}
{% endfor %}
{% endif %}
<p><strong>{{ text_comments }}</strong></p>

<p>
  <textarea name="comment" rows="8" class="form-control">{{ comment }}</textarea>
</p>
<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_continue }}" id="button-shipping-method" data-loading-text="{{ text_loading }}" class="btn btn-primary" />
  </div>
</div>
