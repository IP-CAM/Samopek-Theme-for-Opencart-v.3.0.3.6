{% if categories %}
    <div class="container">
        <div class="row">
            {% for category in categories %}
                {% if loop.index0 < 4 %}
                    <div class="col main-menu-thumb bg-color-white">
                        <a href="{{ category.href }}" style="width:100%;height:100%;display:block">
                            <div class="font-button-catalog color-grey-dark main-menu-thumb-inner">
                                <img src="catalog/view/theme/opencartSamopekTheme/image/product_icon.svg">
                                {{ category.name }}
                            </div>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div class="row">
            {% for category in categories %}

                {% if loop.index0 >= 4 and loop.index0 < 8 %}
                    {% if loop.index0 == 7 %}
                        <div class="col main-menu-thumb bg-color-red">
                            <a href="#" data-toggle="modal"
                               data-target="#subcategoriesModalScrollable">
                                <div class="font-header-2 color-white main-menu-thumb-inner">
                                    {{ text_all_others }}
                                </div>
                            </a>
                        </div>
                    {% else %}
                        <div class="col main-menu-thumb bg-color-white">
                            <a href="{{ category.href }}" style="width:100%;height:100%;display:block">
                                <div class="font-button-catalog color-grey-dark main-menu-thumb-inner">
                                    <img src="catalog/view/theme/opencartSamopekTheme/image/product_icon.svg">
                                    {{ category.name }}
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <!-- Modal Subcategories-->
    <div class="modal fade" id="subcategoriesModalScrollable" tabindex="-1" role="dialog"
         aria-labelledby="subcategoriesModalLabel" aria-hidden="true">
        <div class="modal-dialog categories-modal-dialog" role="document">
            <div class="modal-content categories-modal-content" id="subcategoriesModalLabel">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                Hello!
            </div>
        </div>
    </div>
{% endif %} 