{{ header }}
{{ content_top }}

<div id="information-contact" class="container container-lg">
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="contentArea {{ class }}">
            <h1 class="h2">{{ heading_title }}</h1>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        {% if image %}
                            <div class="col-md-3"><img src="{{ image }}" alt="{{ store }}" title="{{ store }}" class="img-thumbnail" /></div>
                        {% endif %}
                        <div class="col-md-3"><strong>{{ store }}</strong><br />
                            <address>
                                {{ address }}
                            </address>
                            {% if geocode %}
                                <a href="https://maps.google.com/maps?q={{ geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15" target="_blank" class="btn btn-info"><i class="fa fa-map-marker"></i> {{ button_map }}</a>
                            {% endif %}
                            <strong>{{ text_contact_us }}</strong> <br>
                            {{ telephone }}<br>
                            <div class="row" style="margin-bottom: 20px; margin-top: 10px; margin-left: 0px">
                                <a target="_blank" rel="noopener noreferrer" href="https://vk.com/samopek.shop" title="Samopek vkontakte">
                                    <img src="catalog/view/theme/opencartSamopekTheme/image/vk_ico.png">
                                </a>
                                <a target="_blank" rel="noopener noreferrer" href="https://www.instagram.com/samopek.shop/" title="Samopek instagram">
                                    <img src="catalog/view/theme/opencartSamopekTheme/image/instagram_ico.png">
                                </a>
                            </div>
                            <br>
                            {% if fax %}
                                <strong>{{ text_fax }}</strong><br>
                                {{ fax }}
                            {% endif %}
                            {% if open %}
                                <strong>{{ text_open }}</strong><br />
                                {{ open }}<br />
                                <br />
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <form action="{{ action }}" method="post" enctype="multipart/form-data">
                                <h4 class="h4">{{ text_feedback }}</h4>
                                <div class="form-group form-group-2 required {% if error_name %}has-error{% endif %}">
                                    <input type="text" name="name" value="{{ name }}" id="input-name" />
                                	<label for="input-name" data-label="{{ entry_name }}" data-error="{% if error_name %}{{ error_name }}{% endif %}">{{ entry_name }}</label>             
                                </div>
                                <div class="form-group form-group-2 required {% if error_email %}has-error{% endif %}">
                                    <input type="text" name="email" value="{{ email }}" id="input-email" />
                               		<label for="input-email" data-label="{{ entry_email }}" data-error="{% if error_email %}{{ error_email }}{% endif %}">{{ entry_email }}</label>
                                </div>                                
                                <div class="form-group form-group-2 required {% if error_enquiry %}has-error{% endif %}">
                                    <textarea name="enquiry" rows="5" id="input-enquiry">{{ enquiry }}</textarea>
                                	<label for="input-enquiry" data-label="{{ entry_enquiry }}" data-error="{% if error_enquiry %}{{ error_enquiry }}{% endif %}">{{ entry_enquiry }}</label>
                                </div>
                                {{ captcha }}
                           		<input class="btn btn-blue" type="submit" value="{{ button_submit }}" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% if locations %}
                <h3>{{ text_store }}</h3>
                <div class="panel-group" id="accordion">
                    {% for location in locations %}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#collapse-location{{ location.location_id }}" class="accordion-toggle" data-toggle="collapse" data-parent="#accordion">{{ location.name }} <i class="fa fa-caret-down"></i></a></h4>
                            </div>
                            <div class="panel-collapse collapse" id="collapse-location{{ location.location_id }}">
                                <div class="panel-body">
                                    <div class="row">
                                        {% if location.image %}
                                            <div class="col-sm-3"><img src="{{ location.image }}" alt="{{ location.name }}" title="{{ location.name }}" class="img-thumbnail" /></div>
                                        {% endif %}
                                        <div class="col-sm-3"><strong>{{ location.name }}</strong><br />
                                            <address>
                                                {{ location.address }}
                                            </address>
                                            {% if location.geocode %}
                                                <a href="https://maps.google.com/maps?q={{ location.geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15" target="_blank" class="btn btn-info"><i class="fa fa-map-marker"></i> {{ button_map }}</a>
                                            {% endif %}
                                        </div>
                                        <div class="col-sm-3"> <strong>{{ text_telephone }}</strong><br>
                                            {{ location.telephone }}<br />
                                            <br />
                                            {% if location.fax %}
                                                <strong>{{ text_fax }}</strong><br>
                                                {{ location.fax }}
                                            {% endif %}
                                        </div>
                                        <div class="col-sm-3">
                                            {% if location.open %}
                                                <strong>{{ text_open }}</strong><br />
                                                {{ location.open }}<br />
                                                <br />
                                            {% endif %}
                                            {% if location.comment %}
                                                <strong>{{ text_comment }}</strong><br />
                                                {{ location.comment }}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}            
          </div>
        {{ column_right }}</div>
</div>
{{ content_bottom }}
{{ footer }}
