{{ header }}
<div id="account-address" class="container container-lg">
  <div class="breadcrumbs">
    {% for breadcrumb in breadcrumbs %}
      {% if loop.last == loop.index %}
        <span>{{ breadcrumb.text }}</span>
      {% else %}
        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a> >
      {% endif %}
    {% endfor %}
  </div>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  {{ content_top }}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="contentArea {{ class }}">
      <h2 class="h2">{{ text_address_book }}</h2>
      {% if addresses %}
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          {% for result in addresses %}
          <tr>
            <td class="text-left">{{ result.address }}</td>
            <td class="text-right"><a href="{{ result.update }}" class="btn btn-blue">{{ button_edit }}</a> &nbsp; <a href="{{ result.delete }}" class="btn btn-grey-o-red">{{ button_delete }}</a></td>
          </tr>
          {% endfor %}
        </table>
      </div>
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      <div class="buttons clearfix">
        <div class="pull-left"><a href="{{ back }}" class="btn btn-grey-o-red">{{ button_back }}</a></div>
        <div class="pull-right"><a href="{{ add }}" class="btn btn-blue">{{ button_new_address }}</a></div>
      </div>
      </div>
    {{ column_right }}</div>
</div>
{{ content_bottom }}
{{ footer }}