{{ header }}
<div id="account-account" class="container container-lg">
  <div class="breadcrumbs">
    {% for breadcrumb in breadcrumbs %}
      {% if loop.last == loop.index %}
        <span>{{ breadcrumb.text }}</span>
      {% else %}
        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a> >
      {% endif %}
    {% endfor %}
  </div>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {{ content_top }}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="contentArea {{ class }}">
      <h2 class="h3">{{ text_my_account }}</h2>
      <ul class="list-unstyled">
        <li><a href="{{ edit }}" class="text-lg text-blue">{{ text_edit }}</a></li>
        <li><a href="{{ password }}" class="text-lg text-blue">{{ text_password }}</a></li>
        <li><a href="{{ address }}" class="text-lg text-blue">{{ text_address }}</a></li>
        <li><a href="{{ wishlist }}" class="text-lg text-blue">{{ text_wishlist }}</a></li>
      </ul>
      {% if credit_cards %}
      <h2 class="h3">{{ text_credit_card }}</h2>
      <ul class="list-unstyled">
        {% for credit_card in credit_cards %}
        <li><a href="{{ credit_card.href }}" class="text-lg text-blue">{{ credit_card.name }}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
      <h2 class="h3">{{ text_my_orders }}</h2>
      <ul class="list-unstyled">
        <li><a href="{{ order }}" class="text-lg text-blue">{{ text_order }}</a></li>
        <!-- <li><a href="{{ download }}" class="text-lg text-blue">{{ text_download }}</a></li> -->
        <!-- {% if reward %}
        <li><a href="{{ reward }}" class="text-lg text-blue">{{ text_reward }}</a></li>
        {% endif %} -->
        <li><a href="{{ return }}" class="text-lg text-blue">{{ text_return }}</a></li>
        <!-- <li><a href="{{ transaction }}" class="text-lg text-blue">{{ text_transaction }}</a></li> -->
        <!-- <li><a href="{{ recurring }}" class="text-lg text-blue">{{ text_recurring }}</a></li> -->
      </ul>
      <!-- MAKO: There was a Partner section. We don't have partners -->
      <h2 class="h3">{{ text_my_newsletter }}</h2>
      <ul class="list-unstyled">
        <li><a href="{{ newsletter }}" class="text-lg text-blue">{{ text_newsletter }}</a></li>
      </ul>
      </div>
    {{ column_right }}</div>
</div>
{{ content_bottom }}
{{ footer }}