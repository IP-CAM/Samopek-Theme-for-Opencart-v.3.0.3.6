{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                            {% if error_name %}
                                <div class="text-danger">{{ error_name }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-banner">{{ entry_banner }}</label>
                        <div class="col-sm-10">
                            <select name="banner_id" id="input-banner" class="form-control">
                                {% for banner in banners %}
                                    {% if banner.banner_id == banner_id %}
                                        <option value="{{ banner.banner_id }}" selected="selected">{{ banner.name }}</option>
                                    {% else %}
                                        <option value="{{ banner.banner_id }}">{{ banner.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="ontrol-label" for="input-color_title_1">{{ entry_color_title_1 }}</label>
                                <input type="text" name="color_title_1" value="{{ color_title_1 }}" placeholder="{{ entry_color_title_1 }}" id="input-color_title_1" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="control-label" for="input-color_title_2">{{ entry_color_title_2 }}</label>
                                <input type="text" name="color_title_2" value="{{ color_title_2 }}" placeholder="{{ entry_color_title_2 }}" id="input-color_title_2" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="control-label" for="input-color_title_3">{{ entry_color_title_3 }}</label>
                                <input type="text" name="color_title_3" value="{{ color_title_3 }}" placeholder="{{ entry_color_title_3 }}" id="input-color_title_3" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="control-label" for="input-color_title_4">{{ entry_color_title_4 }}</label>
                                <input type="text" name="color_title_4" value="{{ color_title_4 }}" placeholder="{{ entry_color_title_4 }}" id="input-color_title_4" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="control-label" for="input-right_link">{{ entry_right_link }}</label>
                                <input type="text" name="right_link" value="{{ right_link }}" placeholder="{{ entry_right_link }}" id="input-right_link" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="control-label" for="input-right_text_1">{{ entry_right_text_1 }}</label>
                                <input type="text" name="right_text_1" value="{{ right_text_1 }}" placeholder="{{ entry_right_text_1 }}" id="input-right_text_1" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="control-label" for="input-right_text_2">{{ entry_right_text_2 }}</label>
                                <input type="text" name="right_text_2" value="{{ right_text_2 }}" placeholder="{{ entry_right_text_2 }}" id="input-right_text_2" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div style="margin-bottom: 15px;">
                                <label class="control-label" for="input-right_text_3">{{ entry_right_text_3 }}</label>
                                <input type="text" name="right_text_3" value="{{ right_text_3 }}" placeholder="{{ entry_right_text_3 }}" id="input-right_text_3" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="status" id="input-status" class="form-control">
                                {% if status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}